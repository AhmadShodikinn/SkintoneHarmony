<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalResultActivity">

    <TextView
        android:id="@+id/tv_test"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montaga"
        android:gravity="center"
        android:text="@string/result1_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.251" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="111dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/toneView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/ColorBrownExample" />

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btnBtnBtnResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:text="@string/show_result_text"
        android:fontFamily="@font/montaga"
        style="@style/ButtonStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_1tes"
        android:layout_width="59dp"
        android:layout_height="49dp"
        android:layout_marginTop="504dp"
        android:backgroundTint="@color/ColorSecondary"
        android:fontFamily="@font/montaga"
        android:text="1"
        android:textColor="@color/ColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_2tes"
        android:layout_width="59dp"
        android:layout_height="49dp"
        android:layout_marginTop="504dp"
        android:backgroundTint="@color/ColorSecondary"
        android:fontFamily="@font/montaga"
        android:text="2"
        android:textColor="@color/ColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_3tes"
        android:layout_width="59dp"
        android:layout_height="49dp"
        android:layout_marginTop="504dp"
        android:backgroundTint="@color/ColorSecondary"
        android:fontFamily="@font/montaga"
        android:text="3"
        android:textColor="@color/ColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_4tes"
        android:layout_width="59dp"
        android:layout_height="49dp"
        android:layout_marginTop="504dp"
        android:backgroundTint="@color/ColorSecondary"
        android:fontFamily="@font/montaga"
        android:text="4"
        android:textColor="@color/ColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.724"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_5tes"
        android:layout_width="59dp"
        android:layout_height="49dp"
        android:layout_marginTop="504dp"
        android:backgroundTint="@color/ColorSecondary"
        android:fontFamily="@font/montaga"
        android:text="5"
        android:textColor="@color/ColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>