<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SkintoneHarmony" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@color/ColorPrimary</item>
        <item name="android:textColor">@color/ColorSecondary</item>
        <item name="android:toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="splashScreen" parent="Base.Theme.SkintoneHarmony">
        <item name="android:background">@drawable/splash_background</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Widget.Material3.Toolbar">
        <item name="android:background">@color/ColorPrimary</item>
        <item name="android:titleTextColor">@color/ColorSecondary</item>
    </style>

    <style name="imageVector" parent="Base.Theme.SkintoneHarmony">
        <item name="srcCompat">@drawable/vector_image_primary</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.Material3.Button">
        <item name="android:backgroundTint">@color/ColorSecondary</item>
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="fontFamily">@font/montaga</item>
    </style>

    <style name="ButtonStyleOutline" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/ColorPrimary</item>
        <item name="android:textColor">@color/ColorSecondary</item>
        <item name="fontFamily">@font/montaga</item>
    </style>

    <style name="ItemSettings" parent="Base.Theme.SkintoneHarmony">
        <item name="android:icon">@drawable/ic_menu_hamburger_secondary</item>
    </style>

    <style name="TextTitleSetting" parent="Base.Theme.SkintoneHarmony">
        <item name="fontFamily">@font/montaga</item>
        <item name="android:textColor">@color/ColorSecondary</item>
    </style>

    <style name="TextSubtitleSetting" parent="Base.Theme.SkintoneHarmony">
        <item name="fontFamily">@font/montaga</item>
        <item name="android:textColor">@color/colorSubtitle</item>
    </style>

    <style name="RectangleBackground" parent="Base.Theme.SkintoneHarmony">
        <item name="android:background">@drawable/rectangle_background_dark</item>
        <item name="android:textColor">@color/ColorPrimary</item>
    </style>

    <style name="RadioButton" parent="@style/Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/ColorSecondary</item>
        <item name="trackTint">@color/ColorSplash</item>
    </style>

    <style name="BorderSetting" parent="Base.Theme.SkintoneHarmony">
        <item name="android:background">@color/ColorSecondary</item>
    </style>

    <style name="Theme.SkintoneHarmony" parent="Base.Theme.SkintoneHarmony" />
</resources>